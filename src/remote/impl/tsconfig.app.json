{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": [],
        "target": "ESNext",
        "composite": true,
        "emitDeclarationOnly": true,
        "outDir": "../../../dist-types/remote/impl/src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noImplicitThis": true,
        "strict": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "shared/api/*": ["../../shared/api/*"],
            "shared/*": ["../../shared/*"],
            "api/*": ["../api/*"]
        }
    },
    "references": [
        {"path": "../api"},
        {"path": "../../shared"}
    ],
    "include": [
        "src/**/*"
    ]
}